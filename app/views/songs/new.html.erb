<h1>Create a Song</h1>

<%= form_for @song do |f| %>
  <p><%= f.label :title %><%= f.text_field :title %></p>
  <p><%= f.label :artist_name %><%= f.text_field :artist_name %></p>
  <p><%= f.collection_select :genre_name, Genre.all, :name, :name, {}, {:id=>'song_genre_id'} %></p>
  <p><%= f.label :note_contents %><%= f.text_field :note_contents, id: "song_notes_1", name: "song[note_contents][]" %></p>
  <p><%= f.label :note_contents %><%= f.text_field :note_contents, id: "song_notes_2", name: "song[note_contents][]" %></p>
  <p><%= f.submit %></p>
<% end %>
